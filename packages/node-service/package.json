{
  "name": "@sits/node-service",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/amirossanloo/pkg-sits-node-service.git",
    "directory": "packages/configuration"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "main": "./dist/cjs/index.js",
  "types": "./dist/cjs/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json && tsc -p tsconfig.build.cjs.json && pnpm build:post",
    "build:post": "cp -R src/typings dist/esm/typings && cp src/types.d.ts dist/esm/types.d.ts && cp -R src/typings dist/cjs/typings && cp src/types.d.ts dist/cjs/types.d.ts && echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "build:clean": "rimraf dist",
    "build:watch": "pnpm build -- -w",
    "dev": "tsc --watch",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint src --ext .ts",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "type:check": "tsc --noEmit"
  },
  "peerDependencies": {
    "express": "^4.17.1 || ^5.0.0",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.1"
  },
  "dependencies": {
    "@sits/configuration": "workspace:*",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/uuid": "^10.0.0",
    "rimraf": "^6.0.1"
  }
}
