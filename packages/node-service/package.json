{
  "name": "@sits/node-service",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/amirossanloo/pkg-sits-node-service.git",
    "directory": "packages/configuration"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "main": "./dist/cjs/index.js",
  "types": "./dist/cjs/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && pnpm build:esm && pnpm build:cjs && pnpm build:post",
    "build:esm": "tsc -p tsconfig.build.json",
    "build:cjs": "tsc -p tsconfig.build.cjs.json",
    "build:post": "cp -R src/types dist/esm/types && cp -R src/types dist/cjs/types && echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "build:clean": "rimraf dist",
    "build:watch": "concurrently \"pnpm build:esm --watch\" \"pnpm build:cjs --watch\"",
    "dev": "tsc --watch",
    "lint": "eslint .",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "type:check": "tsc --noEmit",
    "prepack": "pnpm build"
  },
  "peerDependencies": {
    "express": "^4.17.1 || ^5.0.0",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.1"
  },
  "dependencies": {
    "@sits/configuration": "workspace:*",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^11.1.0",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node-fetch": "^2.6.12",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.0",
    "fastify": "^5.4.0",
    "node-fetch": "2.6.7",
    "rimraf": "^6.0.1"
  }
}
