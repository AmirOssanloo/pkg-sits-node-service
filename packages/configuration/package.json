{
  "name": "@sits/configuration",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git://github.com/amirossanloo/pkg-sits-node-service.git",
    "directory": "packages/configuration"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "main": "./dist/cjs/index.js",
  "types": "./dist/cjs/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json && tsc -p tsconfig.build.cjs.json",
    "build:watch": "pnpm build -- -w",
    "lint": "eslint .",
    "test": "jest",
    "test:watch": "jest --watch",
    "type:check": "tsc --noEmit"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "ramda": "^0.31.3"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/ramda": "^0.30.2"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
